@model Chemical_Management.Models.Lab

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Lab</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LabName" class="control-label"></label>
                <input asp-for="LabName" class="form-control" />
                <span asp-validation-for="LabName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LabSite" class="control-label"></label>
                <input asp-for="LabSite" class="form-control" />
                <span asp-validation-for="LabSite" class="text-danger"></span>
            </div>
            @if (User.Identity.IsAuthenticated) //only display to user when logged in
            {
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            }
            @if (!User.Identity.IsAuthenticated)
            {
                <h6><i>Please log-in to create a new Lab</i></h6>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
