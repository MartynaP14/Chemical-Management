@model IEnumerable<Chemical_Management.Models.Type>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reagent_Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Reagent_Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<h6>Acid Count: @ViewBag.ACID</h6>
<h6>Base Count: @ViewBag.BASE</h6>
<h6>Organic Count: @ViewBag.ORGANIC</h6>
<h6>Corrosive Count: @ViewBag.CORROSIVE</h6>
<h6>Inorganic Count: @ViewBag.INORGANIC</h6>
<h6>Toxic Count: @ViewBag.TOXIC</h6>

